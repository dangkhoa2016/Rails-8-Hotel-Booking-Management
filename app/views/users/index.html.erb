<p style="color: green"><%= notice %></p>

<%
page_title = User.model_name.human.pluralize(I18n.locale)
content_for :title, page_title
%>

<h1><%= page_title %></h1>

<div id="users" class="row row-cols-1 row-cols-md-2 row-cols-xl-3">
  <% @users.each do |user| %>
    <%= render user %>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
