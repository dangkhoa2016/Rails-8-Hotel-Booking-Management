<p style="color: green"><%= notice %></p>

<%
page_title = Booking.model_name.human.pluralize(I18n.locale)
content_for :title, page_title
%>

<h1><%= page_title %></h1>

<div id="bookings" class="row row-cols-1 row-cols-md-2 row-cols-xl-3">
  <% @bookings.each do |booking| %>
    <%= render booking %>
    <p>
      <%= link_to "Show this booking", booking %>
    </p>
  <% end %>
</div>

<%= link_to "New booking", new_booking_path %>
