<div class='row g-3 row-cols-1 row-cols-md-2 row-cols-xl-3'>
  <% if @booking.promotions.empty? %>
    <div class="flex-grow-1">
      <div class="alert mb-0 alert-secondary hover-shadow">
        <%= t('base.no_records_found') %>
      </div>
    </div>
  <% else %>
    <% @booking.promotions.each do |promotion| %>
      <div class="col">
        <div class="alert mb-0 alert-secondary hover-shadow">
          <h5>
            <%= promotion.to_s.html_safe %>
          </h5>
          <p class='mb-0'>
            <%= promotion.summary %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
