<div class='row g-3 row-cols-1 row-cols-md-2 row-cols-xl-3'>
  <% if special_requests.empty? %>
    <div class="flex-grow-1">
      <div class="alert mb-0 alert-secondary hover-shadow">
        <%= translate('base.no_records_found') %>
      </div>
    </div>
  <% else %>
    <% special_requests.each do |special_request| %>
      <div class="col">
        <div class="alert mb-0 alert-secondary hover-shadow">
          <h5>
            <i class="bi bi-card-checklist"></i>
            <%= SpecialRequest.human_attribute_name(:id) %>: #<%= special_request.id %>
          </h5>
          <p class='mb-0'>
            <%= SpecialRequest.human_attribute_name(:request) %>: <%= special_request.request %>
            <% if special_request.price.present? %>
              <br>
              <%= SpecialRequest.human_attribute_name(:price) %>: <%= special_request.price.display_as_money rescue special_request.price %>
            <% end %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
