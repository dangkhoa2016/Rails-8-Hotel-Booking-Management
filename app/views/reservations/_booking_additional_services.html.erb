<div class='row g-3 row-cols-1 row-cols-md-2 row-cols-xl-3'>
  <% if booking_additional_services.empty? %>
    <div class="flex-grow-1">
      <div class="alert mb-0 alert-secondary hover-shadow">
        <%= translate('base.no_records_found') %>
      </div>
    </div>
  <% else %>
    <% booking_additional_services.each do |booking_additional_service| %>
      <div class="col">
        <div class="alert mb-0 alert-secondary hover-shadow">
          <h5>
            <i class="bi bi-box-seam"></i>
            <%= BookingAdditionalService.human_attribute_name(:additional_service_id) %>: <%= booking_additional_service.additional_service&.name %>
          </h5>
          <p class='mb-0'>
            <%= BookingAdditionalService.human_attribute_name(:quantity) %>: <%= booking_additional_service.quantity %> <%= booking_additional_service.unit %>
            <br>
            <%= BookingAdditionalService.human_attribute_name(:total_price) %>: <%= booking_additional_service.total_price.display_as_money rescue booking_additional_service.total_price %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
