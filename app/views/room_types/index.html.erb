<p style="color: green"><%= notice %></p>

<%
page_title = RoomType.model_name.human.pluralize(I18n.locale)
content_for :title, page_title
%>

<h1><%= page_title %></h1>

<div id="room_types" class="row row-cols-1 row-cols-md-2 row-cols-xl-3">
  <% @room_types.each do |room_type| %>
    <%= render room_type %>
  <% end %>
</div>

<%== pagy_bootstrap_nav(@pagy) %>
<p class='text-muted text-center'>
  <%== pagy_info(@pagy) %>
</p>

<%= link_to "New room type", new_room_type_path, class: "btn btn-primary mt-3" %>
