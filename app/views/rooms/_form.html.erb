<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :room_type_id, style: "display: block" %>
    <%= form.text_field :room_type_id %>
  </div>

  <div>
    <%= form.label :hotel_location_id, style: "display: block" %>
    <%= form.text_field :hotel_location_id %>
  </div>

  <div>
    <%= form.label :capacity, style: "display: block" %>
    <%= form.number_field :capacity %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :half_day_price_morning, style: "display: block" %>
    <%= form.text_field :half_day_price_morning %>
  </div>

  <div>
    <%= form.label :half_day_price_afternoon, style: "display: block" %>
    <%= form.text_field :half_day_price_afternoon %>
  </div>

  <div>
    <%= form.label :summary, style: "display: block" %>
    <%= form.text_field :summary %>
  </div>

  <div>
    <%= form.label :available, style: "display: block" %>
    <%= form.checkbox :available %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Room.statuses.map { |name, value| [Room.human_attribute_name("status.#{name}"), name] }, include_blank: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
