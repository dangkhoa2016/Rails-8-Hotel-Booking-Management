<div class='row g-3 row-cols-1 row-cols-md-2 row-cols-xl-3'>
  <% if reservations.empty? %>
    <div class="flex-grow-1">
      <div class="alert mb-0 alert-secondary hover-shadow">
        <%= translate('base.no_records_found') %>
      </div>
    </div>
  <% else %>
    <% reservations.each do |reservation| %>
      <div class="col">
        <div class="alert mb-0 alert-secondary hover-shadow">
          <h5>
            <i class="bi bi-calendar-check"></i>
            <%= Reservation.human_attribute_name(:id) %>: #<%= reservation.id %>
          </h5>
          <p class='mb-0'>
            <%= Reservation.human_attribute_name(:check_in_at) %>: <%= l(reservation.check_in_at, format: :short) %>
            <br>
            <%= Reservation.human_attribute_name(:check_out_at) %>: <%= l(reservation.check_out_at, format: :short) %>
            <br>
            <%= Reservation.human_attribute_name(:status) %>: <span class="badge bg-info"><%= reservation.status %></span>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
