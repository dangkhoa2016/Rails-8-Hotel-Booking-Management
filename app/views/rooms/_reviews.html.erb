<div class='row g-3 row-cols-1 row-cols-md-2 row-cols-xl-3'>
  <% if reviews.empty? %>
    <div class="flex-grow-1">
      <div class="alert mb-0 alert-secondary hover-shadow">
        <%= translate('base.no_records_found') %>
      </div>
    </div>
  <% else %>
    <% reviews.each do |review| %>
      <div class="col">
        <div class="alert mb-0 alert-secondary hover-shadow">
          <h5>
            <i class="bi bi-star"></i>
            <%= Review.human_attribute_name(:room_rating) %>: <%= review.room_rating %>/10, <%= Review.human_attribute_name(:service_rating) %>: <%= review.service_rating %>/10
          </h5>
          <p class='mb-0'>
            <%= Review.human_attribute_name(:comment) %>: <%= review.comment %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
