<p style="color: green"><%= notice %></p>

<%
page_title = SpecialRequest.model_name.human.pluralize(I18n.locale)
content_for :title, page_title
%>

<h1><%= page_title %></h1>

<div id="special_requests" class="row row-cols-1 row-cols-md-2 row-cols-xl-3">
  <% @special_requests.each do |special_request| %>
    <%= render special_request %>
  <% end %>
</div>

<%== pagy_bootstrap_nav(@pagy) %>
<p class='text-muted text-center'>
  <%== pagy_info(@pagy) %>
</p>

<%= link_to "New special request", new_special_request_path, class: "btn btn-primary mt-3" %>
