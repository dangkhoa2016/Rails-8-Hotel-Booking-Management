%>

<h1><%= page_title %></h1>

<div id="additional_services" class="row row-cols-1 row-cols-md-2 row-cols-xl-3">
  <% @additional_services.each do |additional_service| %>
    <%= render additional_service %>
  <% end %>
</div>

<%== pagy_bootstrap_nav(@pagy) %>
<p class='text-muted text-center'>
  <%== pagy_info(@pagy) %>
</p>

