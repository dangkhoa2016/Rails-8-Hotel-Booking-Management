<p style="color: green"><%= notice %></p>

<%
page_title = Payment.model_name.human.pluralize(I18n.locale)
content_for :title, page_title
%>

<h1><%= page_title %></h1>

<div id="payments" class="row row-cols-1 row-cols-md-2 row-cols-xl-3">
  <% @payments.each do |payment| %>
    <%= render payment %>
  <% end %>
</div>

<%= link_to "New payment", new_payment_path %>
