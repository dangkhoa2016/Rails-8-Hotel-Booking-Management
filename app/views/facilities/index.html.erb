<p style="color: green"><%= notice %></p>

<%
page_title = Facility.model_name.human.pluralize(I18n.locale)
content_for :title, page_title
%>

<h1><%= page_title %></h1>

<div id="facilities" class="row row-cols-1 row-cols-md-2 row-cols-xl-3">
  <% @facilities.each do |facility| %>
    <%= render facility %>
    <p>
      <%= link_to "Show this facility", facility %>
    </p>
  <% end %>
</div>

<%= link_to "New facility", new_facility_path %>
