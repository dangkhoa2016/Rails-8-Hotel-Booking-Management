<%
  rooms = facility.rooms.reorder(name: :asc).to_a
%>

<%= render 'shared/render_record_show', record: facility do %>
  <% if action_name == "show" %>
    <div class="col-12">
      <hr />

      <h4 class='mb-3'>
        <%= Facility.human_attribute_name(:rooms) %>
        <span class='badge bg-secondary'>
          <span><%= t('base.selected_text') %>: </span><span><%= rooms.count %></span>
        </span>
      </h4>

      <div class='row g-3 row-cols-1 row-cols-md-2 row-cols-xl-3'>
        <% rooms.each do |room| %>
          <div class="col">
            <div class="alert mb-0 alert-secondary hover-shadow">
              <h5>
                <i class="bi bi-house-door"></i>
                <%= render_text_field(room, :name) %>
              </h5>
              <p class='mb-0'>
                <%= render_text_field(room, :summary) %>
              </p>
            </div>
          </div>
        <% end %>
      </div>

      <hr />
    </div>
  <% end %>
<% end %>
