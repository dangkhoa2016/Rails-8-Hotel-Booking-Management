<%= form_with(model: facility) do |form| %>
  <% if facility.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(facility.errors.count, "error") %> prohibited this facility from being saved:</h2>

      <ul>
        <% facility.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :summary, style: "display: block" %>
    <%= form.text_field :summary %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Facility.statuses.map { |name, value| [Facility.human_attribute_name("status.#{name}"), name] }, include_blank: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
