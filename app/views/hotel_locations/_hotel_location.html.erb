<div id="<%= dom_id hotel_location %>" class="col">
  <div class="card mb-3">
    <div class="card-header">
      <%= link_to hotel_location do %>
        <i class="fa fa-link"></i>
        <strong><%= hotel_location.to_s %></strong>
      <% end %>
    </div>
    <div class="card-body">
      <p><strong>Name:</strong> <%= hotel_location.name %></p>
      <p><strong>Address:</strong> <%= hotel_location.address %></p>
      <p><strong>Manager name:</strong> <%= hotel_location.manager_name %></p>
      <p><strong>Status:</strong> <%= hotel_location.status %></p>
    </div>
  </div>
</div>
