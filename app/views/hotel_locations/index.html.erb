<p style="color: green"><%= notice %></p>

<%
page_title = HotelLocation.model_name.human.pluralize(I18n.locale)
content_for :title, page_title
%>

<%= render partial: "shared/header_actions", locals: { title: page_title } %>

<div id="hotel_locations" class="row row-cols-1 row-cols-md-2 row-cols-xl-3">
  <% @hotel_locations.each do |hotel_location| %>
    <%= render hotel_location %>
  <% end %>
</div>

<%== pagy_bootstrap_nav(@pagy) %>
<p class='text-muted text-center'>
  <%== pagy_info(@pagy) %>
</p>

<%= link_to "New hotel location", new_hotel_location_path, class: "btn btn-primary mt-3" %>
