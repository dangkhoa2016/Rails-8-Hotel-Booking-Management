<div class="col">
  <div class="form-group">
    <%= form.label "from_#{name}", I18n.translate("filters.from_name", name: label_name), class: 'form-label' %>
    <%= form.number_field "from_#{name}", value: from_value, class: 'form-control', step: step %>
  </div>

  <div class="form-group">
    <%= form.label "to_#{name}", I18n.translate("filters.to_name", name: label_name), class: 'form-label' %>
    <%= form.number_field "to_#{name}", value: to_value, class: 'form-control', step: step %>
  </div>
</div>
