<%
options = {
  class: "mb-4",
  id: "filter-form",
  data: {
    controller: "filter",
    action: "turbo:before-cache->filter#resetFilter"
  },
  action: :index,
  method: :get,
  url: url_for(action: :index)
}
%>

<%= form_for(FilterUtils::QUERYSTRING_FILTER_KEY.to_sym, options) do |form| %>
  <div class='row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 gx-3 gy-2'>
    <%= render_filters(form) %>
  </div>

  <div class="mt-3">
    <%= form.button(class: "btn btn-primary") do %>
      <i class="bi bi-funnel"></i>
      <%= translate("buttons.filter") %>
    <% end %>
    <%= link_to translate("buttons.empty_filter_values"), url_for(action: :index), class: "btn btn-secondary ms-2" %>
  </div>
<% end %>
