<h2 class='text-center mb-3'><%= translate('devise.passwords.forgot_password_title') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |form| %>
  <% if resource.errors.any? %>
    <div class='alert alert-danger'>
      <% resource.errors.full_messages.each do |error| %>
        <p class='m-0'><%= error %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mt-3 text-center">
    <%= form.submit translate('buttons.send_reset_password_instructions'), class: "btn btn-primary" %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
