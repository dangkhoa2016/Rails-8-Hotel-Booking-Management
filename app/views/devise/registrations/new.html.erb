<div class="row justify-content-center w-100">
  <div class="col-md-8 col-lg-6 col-xl-4">
    <div class="card">
      <div class="card-header text-center">
        <h2>Sign Up</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
          <div class="form-group">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group mt-3">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control" %>
            <small class="form-text text-muted">Password should be at least 6 characters long.</small>
          </div>

          <div class="form-group mt-3">
            <%= form.label :password_confirmation, class: "form-label" %>
            <%= form.password_field :password_confirmation, class: "form-control" %>
          </div>

          <div class="mt-3 text-center">
            <%= form.submit "Sign Up", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
