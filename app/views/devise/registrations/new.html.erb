<h2 class='text-center mb-3'>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-control" %>
    <small class="form-text text-muted">Password should be at least <%= @minimum_password_length %> characters long.</small>
  </div>

  <div class="form-group mt-3">
    <%= form.label :password_confirmation, class: "form-label" %>
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="mt-3 text-center">
    <%= form.submit "Sign Up", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
