<div class="row justify-content-center w-100">
  <div class="col-md-8 col-lg-6 col-xl-4">
    <div class="card">
      <div class="card-header text-center">
        <h2>Log in</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
          <% if flash[:alert] %>
            <div class="alert alert-danger">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group mt-3">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mt-3">
              <%= form.check_box :remember_me, class: "form-check-input" %>
              <%= form.label :remember_me, class: "form-check-label" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%= form.submit "Login", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
