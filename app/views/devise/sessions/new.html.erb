<%
  page_title = t('devise.sessions.login_title')
  content_for :title, page_title
%>

<h2 class='text-center mb-3'><%= page_title %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert].capitalize %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check mt-3">
      <%= form.check_box :remember_me, class: "form-check-input" %>
      <%= form.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%= form.submit translate('buttons.login'), class: "btn btn-primary" %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
