<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :encrypted_password, style: "display: block" %>
    <%= form.text_field :encrypted_password %>
  </div>

  <div>
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :note, style: "display: block" %>
    <%= form.text_field :note %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Customer.statuses.map { |name, value| [Customer.human_attribute_name("status.#{name}"), name] }, include_blank: true %>
  </div>

  <div>
    <%= form.label :customer_type, style: "display: block" %>
    <%= form.select :customer_type, Customer.customer_types.map { |name, value| [Customer.human_attribute_name("customer_type.#{name}"), name] }, include_blank: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
