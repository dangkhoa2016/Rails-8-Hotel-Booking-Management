<div id="<%= dom_id customer %>">
  <p>
    <strong>Name:</strong>
    <%= customer.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= customer.email %>
  </p>

  <p>
    <strong>Phone number:</strong>
    <%= customer.phone_number %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= customer.address %>
  </p>

  <p>
    <strong>Note:</strong>
    <%= customer.note %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= customer.status %>
  </p>

  <p>
    <strong>Customer type:</strong>
    <%= customer.customer_type %>
  </p>

</div>
