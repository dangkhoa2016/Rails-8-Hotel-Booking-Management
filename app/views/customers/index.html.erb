<p style="color: green"><%= notice %></p>

<%
page_title = Customer.model_name.human.pluralize(I18n.locale)
content_for :title, page_title
%>

<h1><%= page_title %></h1>

<div id="customers" class="row row-cols-1 row-cols-md-2 row-cols-xl-3">
  <% @customers.each do |customer| %>
    <%= render customer %>
    <p>
      <%= link_to "Show this customer", customer %>
    </p>
  <% end %>
</div>

<%= link_to "New customer", new_customer_path %>
